<!DOCTYPE html>
<html data-bs-theme="dark" lang="ru">

<head>
    <meta charset="utf-8" content="width=device-width, initial-scale=1" name="viewport">
    <title>@ViewData["Title"]</title>
    <link asp-append-version="true" href="/shared/cascading-style-sheets/style.css" rel="stylesheet" />
    <link asp-append-version="true" href="/Messaging.styles.css" rel="stylesheet" />
    <link asp-append-version="true" crossorigin="anonymous"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" rel="stylesheet" />
</head>

<body>
    <header class="sticky-block sticky-top">
        <nav class="bg-body-tertiary navbar navbar-expand-lg">
            <div class="container-fluid gap-3 justify-content-center py-3">
                <a asp-action="Index" asp-area="Messaging" asp-controller="Chat" class="navbar-brand">Chat</a>
                <button aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"
                    class="navbar-toggler" data-bs-target="#navbarNavDropdown" data-bs-toggle="collapse" type="button">
                    <span class="navbar-toggler-icon navbar-toggler-icon-size"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="gap-3 navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Send" asp-area="Messaging" asp-controller="Chat" class="nav-link">Send
                                Messages</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Read" asp-area="Messaging" asp-controller="Chat" class="nav-link">Read
                                Messages</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ReadLatest" asp-area="Messaging" asp-controller="Chat" class="nav-link">Read
                                Latest Messages</a>
                        </li>
                        <li>
                            <button class="btn btn-primary" id="themeButton" title="Switch theme" type="button">
                                <svg class="bi" id="themeIcon" role="img">
                                    <use xlink:href="/shared/scalable-vector-graphics/themes.svg#moon-stars-fill"></use>
                                </svg>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="pt-3">@RenderBody()</main>
    <footer class="border-top my-3 py-3">
        <p class="text-center text-muted">&copy; 2024 L And I Unload</p>
    </footer>
    <script asp-append-version="true" src="/shared/javascript/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script asp-append-version="true" crossorigin="anonymous"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>